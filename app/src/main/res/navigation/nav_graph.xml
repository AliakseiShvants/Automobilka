<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/carsFragment">

    <fragment
        android:id="@+id/carsFragment"
        android:name="by.shvants.avtomobilka.presentation.CarsFragment">

        <action
            app:destination="@id/carDetailsFragment"
            android:id="@+id/carsFragment_to_carDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/carDetailsFragment"
        android:name="by.shvants.avtomobilka.presentation.CarDetailsFragment">

        <argument
            android:name="car"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>